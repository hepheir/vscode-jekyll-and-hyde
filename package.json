{
	"name": "jekyll-n-hyde",
	"version": "0.4.0",
	"publisher": "Hepheir",
	"engines": {
		"vscode": "^1.65.0"
	},
	"displayName": "Jekyll n Hyde",
	"description": "Categorized Post View for Jekyll",
	"categories": [
		"SCM Providers",
		"Other"
	],
	"keywords": [
		"jekyll"
	],
	"icon": "images/icon.png",
	"bugs": {
		"email": "hepheir@gmail.com",
		"url": "https://github.com/jekyll-n-hyde/vscode-jekyll-n-hyde-prototype/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/jekyll-n-hyde/vscode-jekyll-n-hyde-prototype"
	},
	"activationEvents": [
		"onView:explorer"
	],
	"main": "./out/extension.js",
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "jekyll-n-hyde",
					"title": "Jekyll N Hyde",
					"icon": "images/jekyll.svg"
				}
			]
		},
		"views": {
			"jekyll-n-hyde": [
				{
					"id": "jekyll-n-hyde.view.categories",
					"name": "Categories",
					"icon": "images/jekyll.svg",
					"contextualTitle": "Jekyll n Hyde :: Site View"
				}
			]
		},
		"commands": [
			{
				"command": "jekyll-n-hyde.command.refresh",
				"title": "Refresh",
				"icon": "$(refresh)"
			},
			{
				"command": "jekyll-n-hyde.command.reload",
				"title": "Reload",
				"icon": "$(refresh)"
			},
			{
				"command": "jekyll-n-hyde.command.post.create",
				"title": "Create a new post",
				"icon": "$(file-add)"
			},
			{
				"command": "jekyll-n-hyde.command.post.delete",
				"title": "Delete",
				"icon": "$(trash)"
			},
			{
				"command": "jekyll-n-hyde.command.post.publish",
				"title": "Publish post",
				"icon": "$(add)"
			},
			{
				"command": "jekyll-n-hyde.command.post.unpublish",
				"title": "Unpublish post",
				"icon": "$(remove)"
			},
			{
				"command": "jekyll-n-hyde.command.post.date-up-to-date",
				"title": "Set date to now",
				"icon": "$(refresh)"
			},
			{
				"command": "jekyll-n-hyde.command.category.create",
				"title": "Create a new category",
				"icon": "$(file-directory-create)"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "jekyll-n-hyde.command.post.create",
					"group": "navigation",
					"when": "view == jekyll-n-hyde.view.categories"
				},
				{
					"command": "jekyll-n-hyde.command.category.create",
					"group": "navigation",
					"when": "view == jekyll-n-hyde.view.categories"
				},
				{
					"command": "jekyll-n-hyde.command.refresh",
					"group": "navigation",
					"when": "view == jekyll-n-hyde.view.categories"
				},
				{
					"command": "jekyll-n-hyde.command.reload",
					"when": "view == jekyll-n-hyde.view.categories"
				}
			],
			"view/item/context": [
				{
					"command": "jekyll-n-hyde.command.category.create",
					"group": "inline",
					"when": "viewItem == jekyll-n-hyde.model.category"
				},
				{
					"command": "jekyll-n-hyde.command.post.create",
					"group": "inline",
					"when": "viewItem == jekyll-n-hyde.model.category"
				},
				{
					"command": "jekyll-n-hyde.command.post.delete",
					"when": "viewItem == jekyll-n-hyde.model.post"
				},
				{
					"command": "jekyll-n-hyde.command.post.date-up-to-date",
					"when": "viewItem == jekyll-n-hyde.model.post"
				},
				{
					"command": "jekyll-n-hyde.command.post.publish",
					"when": "viewItem == jekyll-n-hyde.model.post"
				},
				{
					"command": "jekyll-n-hyde.command.post.unpublish",
					"when": "viewItem == jekyll-n-hyde.model.post"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.0",
		"@types/node": "14.x",
		"@types/vscode": "^1.65.0",
		"@typescript-eslint/eslint-plugin": "^5.12.1",
		"@typescript-eslint/parser": "^5.12.1",
		"@vscode/test-electron": "^2.1.2",
		"eslint": "^8.9.0",
		"glob": "^7.2.0",
		"mocha": "^9.2.1",
		"typescript": "^4.5.5"
	},
	"dependencies": {
		"@types/yamljs": "^0.2.31",
		"gray-matter": "^4.0.3",
		"vsce": "^2.15.0",
		"yamljs": "^0.3.0"
	}
}
